<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.john.estacion2.MainActivity">

    <!--android:backgroundTint="@color/colorPrimary"-->

    <LinearLayout
        android:id="@+id/main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingBottom="20sp">

        <Button
            android:id="@+id/preferencias"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/AzulPrueba2"
            android:drawableLeft="@drawable/config"
            android:text="CONFIGURACIÓN"
            android:textStyle="bold" />


        <Button
            android:id="@+id/salir"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/AzulPrueba2"
            android:drawableLeft="@drawable/exit"
            android:text="SALIR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/boton_prueba"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/AzulPrueba2"
            android:drawableLeft="@drawable/update"
            android:text="DATOS"
            android:textStyle="bold" />


    </LinearLayout>


    <TableLayout
        android:id="@+id/TableLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_buttons"
        android:stretchColumns="*"
        >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/AzulPrueba2"
            >

            <TextView
                android:id="@+id/indiceCol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="20sp"
                android:text="Tiempo(min)" />

            <TextView
                android:id="@+id/TemperaturaCol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="20sp"
                android:text="Temperatura(°C)" />

            <TextView
                android:id="@+id/LluviaCol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="20sp"
                android:text="Lluvia(%)" />

            <TextView
                android:id="@+id/VientoCol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="20sp"
                android:text="Viento(km/h)" />


        </TableRow>
        <View
            android:layout_height="1.5sp"
            android:background="#000">

        </View>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/ind1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="16sp"
                android:text="" />

            <TextView
                android:id="@+id/temp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="16sp"
                android:text="" />

            <TextView
